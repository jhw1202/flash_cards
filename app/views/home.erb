<div class="before-game">

<h1>Welcome, <%= @user.name %></h1>

<h2>Choose a Deck</h2>
<ul>
	<% all_decks = [] %>
	<% @decks.each do |deck| %>
		<% all_decks << deck %>
	<% end %>
	<% deck_selection = all_decks.sample(5) %>
	<% deck_selection.each do |deck| %>
	<li><a href="/deck/<%= deck.id %>"><%= deck.name %></a></li>
	<% end %>
  <li><br><form action="/home" method="get"><input class="index-button" type="submit" value="Refresh List"></form></li>
</ul>



</div>
